function deleteItem(e) {

forms.value.map((item, index) => {
let indexItem = index

item.data.map((elem, index) => {
if (elem.id === e.target.id) {
forms.value[indexItem].data.splice(index, 1)
deleteItemBD(indexItem)

}
})
})
}